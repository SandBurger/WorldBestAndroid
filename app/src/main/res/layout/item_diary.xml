<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_diary_background_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/cardview_grey"
        app:strokeWidth="1dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/item_diary_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/min_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/inactive"
                android:text="오전 06:00"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageButton
                android:id="@+id/item_diary_setting_ib"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_menu_dot"
                android:background="@color/white"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/item_diary_time_tv"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/item_diary_diary_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/line_black"
                android:text="배고파"
                app:layout_constraintTop_toBottomOf="@id/item_diary_time_tv"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>