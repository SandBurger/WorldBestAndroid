<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/background_grey"/>
    <ImageView
        android:id="@+id/see_all_divider_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/line_grey"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/see_all_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/see_all_rv"/>
    <ImageButton
        android:id="@+id/see_all_exit_ib"
        android:layout_width="17dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_exit"
        app:tint="@color/font_black"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="@id/see_all_date_tv"
        app:layout_constraintBottom_toBottomOf="@id/see_all_date_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/see_all_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/font_black"
        android:fontFamily="@font/min_sans_regular"
        android:text="5월 15일"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/see_all_calendar_dialog_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:src="@drawable/ic_bottom_arrow"
        android:scaleType="fitCenter"
        app:tint="@color/line_black"
        android:background="@android:color/transparent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="@id/see_all_date_tv"
        app:layout_constraintBottom_toBottomOf="@id/see_all_date_tv"
        app:layout_constraintStart_toEndOf="@id/see_all_date_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/see_all_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_diary"
        app:layout_constraintTop_toBottomOf="@id/see_all_divider_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>