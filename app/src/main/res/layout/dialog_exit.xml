<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_exit_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/dialog_exit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/min_sans_medium"
            android:textColor="@color/line_black"
            android:textSize="14sp"
            android:text="@string/dialog_write_title"
            android:includeFontPadding="false"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/dialog_exit_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/min_sans_regular"
            android:includeFontPadding="false"
            android:textColor="@color/inactive"
            android:textSize="14sp"
            android:text="@string/dialog_write_message"
            app:layout_constraintTop_toBottomOf="@id/dialog_exit_title_tv"
            app:layout_constraintStart_toStartOf="@id/dialog_exit_title_tv" />
            <TextView
                android:id="@+id/dialog_exit_negative_button_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:fontFamily="@font/min_sans_medium"
                android:textSize="14sp"
                android:textColor="@color/dialog_inactive"
                app:layout_constraintTop_toTopOf="@id/dialog_exit_positive_button_tv"
                app:layout_constraintEnd_toEndOf="@id/dialog_exit_message_tv"/>
            <TextView
                android:id="@+id/dialog_exit_positive_button_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="@string/exit"
                android:fontFamily="@font/min_sans_medium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/error"
                android:layout_marginStart="32dp"
                android:paddingEnd="24dp"
                android:paddingBottom="17dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_exit_message_tv"
                app:layout_constraintStart_toEndOf="@id/dialog_exit_negative_button_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>