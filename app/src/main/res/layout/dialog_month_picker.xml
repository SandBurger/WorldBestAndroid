<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dialog_month_picker_background_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/picker_background"
                android:layout_marginHorizontal="16dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="@id/dialog_month_picker_month_np"
                app:layout_constraintBottom_toBottomOf="@id/dialog_month_picker_month_np"/>
            <NumberPicker
                android:id="@+id/dialog_month_picker_year_np"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.PickerDialog"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/dialog_month_picker_year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="년"
                android:fontFamily="@font/min_sans_medium"
                android:textColor="@color/line_black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/dialog_month_picker_background_iv"
                app:layout_constraintBottom_toBottomOf="@id/dialog_month_picker_background_iv"
                app:layout_constraintStart_toEndOf="@id/dialog_month_picker_year_np"/>
            <NumberPicker
                android:id="@+id/dialog_month_picker_month_np"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.PickerDialog"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toTopOf="@id/dialog_month_picker_year_np"
                app:layout_constraintBottom_toBottomOf="@id/dialog_month_picker_year_np"
                app:layout_constraintStart_toEndOf="@id/dialog_month_picker_year_tv"
                />
            <TextView
                android:id="@+id/dialog_month_picker_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="월"
                android:fontFamily="@font/min_sans_medium"
                android:textColor="@color/line_black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/dialog_month_picker_background_iv"
                app:layout_constraintBottom_toBottomOf="@id/dialog_month_picker_background_iv"
                app:layout_constraintStart_toEndOf="@id/dialog_month_picker_month_np"/>

            <TextView
                android:id="@+id/dialog_month_picker_confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textColor="@color/active"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="35dp"
                android:paddingBottom="18dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_month_picker_year_np"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/dialog_month_picker_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textColor="@color/active"
                android:layout_marginEnd="33dp"
                app:layout_constraintTop_toTopOf="@id/dialog_month_picker_confirm_tv"
                app:layout_constraintEnd_toStartOf="@id/dialog_month_picker_confirm_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>