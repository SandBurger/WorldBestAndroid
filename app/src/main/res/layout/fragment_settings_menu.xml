<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="menu"
    android:background="@color/background_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/settings_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/min_sans_medium"
        android:text="설정"
        android:textColor="@color/line_black"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settings_divider_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_grey"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/settings_title_tv"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_menu_profile_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/settings_divider_iv">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/settings_menu_profile_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_trash_can"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/settings_menu_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/min_sans_regular"
            android:text="선한 김"
            android:textSize="20sp"
            android:textColor="@color/line_black"
            android:includeFontPadding="false"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/settings_menu_profile_iv"/>
        <TextView
            android:id="@+id/settings_menu_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/min_sans_regular"
            android:text="abcd1234@gmail.com"
            android:textColor="@color/inactive"
            app:layout_constraintTop_toBottomOf="@id/settings_menu_name_tv"
            app:layout_constraintStart_toStartOf="@id/settings_menu_name_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_menu_time_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/settings_menu_profile_lo">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/settings_menu_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/settings_menu_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/min_sans_regular"
            android:text="글쓰기 시간 설정"
            android:textSize="16sp"
            android:textColor="@color/line_black"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/settings_menu_time_iv"
            app:layout_constraintTop_toTopOf="@id/settings_menu_time_iv"
            app:layout_constraintBottom_toBottomOf="@id/settings_menu_time_iv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>