<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/read_divider_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/line_grey"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/read_exit_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/read_exit_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_exit"
        android:layout_marginTop="44dp"
        android:layout_marginStart="17dp"
        app:tint="@color/font_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/read_remove_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:src="@drawable/ic_trash_can"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/read_exit_ib"
        app:layout_constraintBottom_toBottomOf="@id/read_exit_ib"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/read_divider_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/read_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="2022.08.08 오전 12:00"
                android:textSize="12sp"
                android:textColor="@color/inactive"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/diary_diary_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:lineSpacingExtra="4sp"
                android:background="@color/background_grey"
                android:fontFamily="@font/min_sans_regular"
                android:textSize="14sp"
                android:textColor="@color/line_black"
                android:hint="지금 무슨 생각을 하고 계신가요?"
                app:layout_constraintTop_toBottomOf="@id/read_date_tv"
                app:layout_constraintStart_toStartOf="@id/read_date_tv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>