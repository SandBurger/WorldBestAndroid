<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_schedule_indicator_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/grey_dot"
        app:layout_constraintTop_toTopOf="@id/item_schedule_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_schedule_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_schedule_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:text="친구와 아점약속"
        android:fontFamily="@font/min_sans_regular"
        android:textSize="16sp"
        android:textColor="@color/cardview_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_schedule_indicator_iv"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_schedule_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="오전 8시-오전 9시"
        android:textSize="10sp"
        android:textColor="@color/cardview_grey"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/item_schedule_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_schedule_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_schedule_title_tv"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_schedule_option_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu_dot"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/item_schedule_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_schedule_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>