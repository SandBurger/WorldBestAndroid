<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/write_divider_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@color/brand_light"
        android:layout_marginBottom="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/write_write_diary_et"/>
    <ImageButton
        android:id="@+id/write_exit_ib"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_exit"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="@id/write_date_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_date_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/write_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="5월 15일"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:textSize="14sp"
        android:layout_marginEnd="21dp"

        app:layout_constraintTop_toTopOf="@id/write_date_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_date_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/write_write_diary_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="93dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>