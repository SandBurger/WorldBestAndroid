<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_write_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/dialog_write_message1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/line_black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="나가시겠어요?"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/dialog_write_message2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/inactive"
            android:textSize="14dp"
            android:text="작성한 글은 저장되지 않습니다."
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_write_message1_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/dialog_write_divider1_iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/line_grey"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_write_message2_tv"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/dialog_write_keep_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/inactive"
            android:textStyle="bold"
            android:text="계속작성"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_write_divider1_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_write_divider2_iv"/>
        <ImageView
            android:id="@+id/dialog_write_divider2_iv"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:src="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@id/dialog_write_divider1_iv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/dialog_write_exit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="나가기"
            android:layout_marginTop="1dp"
            android:paddingBottom="19dp"
            app:layout_constraintTop_toTopOf="@id/dialog_write_keep_tv"
            app:layout_constraintStart_toEndOf="@id/dialog_write_divider2_iv"
            app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>