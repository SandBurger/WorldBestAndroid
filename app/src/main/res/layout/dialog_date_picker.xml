<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:id="@+id/dialog_date_picker_calendar_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="horizontal"
        app:firstDayOfTheWeek="sunday"
        app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/dialog_date_picker_confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="확인"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_date_picker_calendar_cv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/dialog_date_picker_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="취소"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@id/dialog_date_picker_confirm_tv"
            app:layout_constraintEnd_toStartOf="@id/dialog_date_picker_confirm_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>