<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/brand_light"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:id="@+id/calendar_header_iv"
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:background="@color/brand_light"
                        android:scaleType="fitXY"
                        android:paddingTop="18dp"
                        android:src="@drawable/calendar_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/calendar_expanded_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/spoqa_han_sans_neo_medium"
                        android:text="2022년 8월"
                        android:textColor="@color/background_white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <ImageButton
                        android:id="@+id/calendar_expanded_month_selector_ib"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_bottom_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/calendar_expanded_date_tv"
                        app:layout_constraintStart_toEndOf="@id/calendar_expanded_date_tv"
                        app:layout_constraintTop_toTopOf="@id/calendar_expanded_date_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_collapseMode="pin">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/calendar_collapsed_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="@string/app_name"
                            android:textColor="@color/background_white"
                            android:textSize="20sp"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="@id/calendar_search_ib"
                            app:layout_constraintBottom_toBottomOf="@id/calendar_search_ib"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <ImageButton
                            android:id="@+id/calendar_collapsed_month_selector_ib"
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_bottom_arrow"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/calendar_collapsed_date_tv"
                            app:layout_constraintStart_toEndOf="@id/calendar_collapsed_date_tv"
                            app:layout_constraintTop_toTopOf="@id/calendar_collapsed_date_tv" />
                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/calendar_search_ib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_search"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                >
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/calendar_date_container"
                    android:name="com.example.sandiary.ui.calendar.FragmentCalendarDate"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.kizitonwose.calendarview.CalendarView
                    android:id="@+id/calendar_calendar_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cv_dayViewResource="@layout/item_calendar_day"
                    app:cv_hasBoundaries="true"
                    app:cv_inDateStyle="allMonths"
                    app:cv_orientation="horizontal"
                    app:cv_outDateStyle="endOfRow"
                    app:cv_scrollMode="paged"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar_date_container" />
                <ImageView
                    android:id="@+id/calendar_plan_background_iv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@color/background_grey"
                    android:layout_marginTop="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar_calendar_cv" />

                <ImageView
                    android:id="@+id/calendar_schedule_line_iv"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="7dp"
                    android:src="@color/cardview_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calendar_calendar_cv" />
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="17dp"
                    app:layout_constraintTop_toBottomOf="@id/calendar_calendar_cv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendar_schedule_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_schedule"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@id/calendar_schedule_rv"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calendar_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="90dp"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

