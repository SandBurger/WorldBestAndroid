<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SanDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>-->
<!--       -->
        <!-- Customize your theme here. -->
    </style>
    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/active</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme.Picker_16sp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/active</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="AppTheme.PickerDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="fontFamily">@font/min_sans_medium</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/active</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@android:color/transparent</item>
        <item name="fontFamily">@font/min_sans_medium</item>
    </style>
    <style name="write_background">
        <item name="backgroundColor">@color/background_grey</item>
    </style>
    <style name="backgroundColor">
        <item name="backgroundColor">@color/white</item>
    </style>
    <style name="Apptheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/active</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>